- model_class = @story_comment.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:story_id) + ':'
  %br
  = @story_comment.story.content
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @story_comment.user.email
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @story_comment.content

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), story_comments_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_story_comment_path(@story_comment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), story_comment_path(@story_comment), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
