= simple_form_for @story, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id
  = f.input :content
  = f.input :worker_id
  = f.input :state
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), stories_path, :class => 'btn'
